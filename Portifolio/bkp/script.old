document.addEventListener("DOMContentLoaded", () => {
    // Remover o loader após a carga
    const loader = document.getElementById('loader');
    loader.style.display = 'none';

    // Menu Hambúrguer
    const menuToggle = document.getElementById('menu-toggle');
    const navMenu = document.getElementById('nav-menu');

    menuToggle.addEventListener('click', () => {
        navMenu.classList.toggle('active');
    });

    // Efeito Teletype
    const teletypeElements = document.querySelectorAll(".teletype");
    let currentElement = 0;

    const messages = [
        "Seja bem-vindo!",
        "Desenvolvedor Front-End em formação.",
        "Transformando ideias em interfaces funcionais.",
        "Explore meus projetos e minha jornada.",
        "Vamos criar algo incrível juntos!"
    ];

    const typeWriter = (teletype, text, index) => {
        if (index < text.length) {
            const textContainer = teletype.querySelector(".teletype-text");
            if (textContainer) textContainer.innerHTML += text.charAt(index);
            setTimeout(() => typeWriter(teletype, text, index + 1), 100);
        } else {
            currentElement++;
            if (currentElement >= messages.length) {
                currentElement = 0;
            }
            setTimeout(() => {
                const textContainer = teletype.querySelector(".teletype-text");
                if (textContainer) textContainer.innerHTML = '';
                startTyping(teletypeElements[currentElement]);
            }, 1500);
        }
    };

    const startTyping = teletype => {
        const text = messages[currentElement];
        typeWriter(teletype, text, 0);
    };

    if (teletypeElements.length > 0) {
        startTyping(teletypeElements[currentElement]);
    }
});

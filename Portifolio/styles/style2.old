/* Reset e Estilos Globais */
body {
  font-family: 'Poppins', sans-serif;
  background-color: #f4f4f4;
  color: #333;
  margin: 0;
  padding: 0;
}

.container {
  width: 90%;
  max-width: 1200px;
  margin: 0 auto;
}

/* Cabeçalho */
.header {
  position: relative;
  background: url('../assets/Banner_Home.png') no-repeat center center/cover;
  height: 80vh;
  display: flex;
  align-items: center;
  color: #fff;
}
.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1;
}

/* Navegação */
.nav {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 0;
}
.hamburger {
  display: none;
  flex-direction: column;
  cursor: pointer;
}
.hamburger span {
  width: 25px;
  height: 3px;
  background: #fff;
  margin: 4px 0;
  transition: all 0.3s;
}
.nav-links {
  display: flex;
  gap: 20px;
}
.nav__link {
  color: #fff;
  text-decoration: none;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 5px;
  transition: color 0.3s;
}
.nav__link:hover {
  color: #f0f0f0;
}

/* Conteúdo do Hero */
.hero-content {
  position: relative;
  z-index: 2;
  text-align: center;
  margin-top: 100px;
}
.hero-title {
  font-size: 2.5rem;
  margin: 0;
  /* Título em amarelo com sombra para destaque */
  color: #ffeb3b;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
}
.gradient-text {
  background: linear-gradient(90deg, #007bff, #00c6ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.title-highlight {
  color: #ffeb3b;
}
.hero-content p {
  font-size: 1.2rem;
  margin: 20px 0;
}
.btn-container {
  display: flex;
  justify-content: center;
  gap: 20px;
}
.btn, .btn-secondary {
  padding: 10px 20px;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
  transition: background 0.3s;
}
.btn {
  background: #007bff;
  color: #fff;
}
.btn:hover {
  background: #0056b3;
}
.btn-secondary {
  background: #28a745;
  color: #fff;
}
.btn-secondary:hover {
  background: #1e7e34;
}

/* Seção de Introdução */
.intro {
  padding: 50px 20px;
  text-align: center;
}

/* Rodapé */
.footer {
  background: #222;
  color: #fff;
  padding: 40px 20px;
  text-align: center;
}
.footer__container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}
.footer__socials {
  display: flex;
  gap: 20px;
}
.footer__social-link {
  color: #fff;
  font-size: 1.5rem;
  transition: color 0.3s;
}
.footer__social-link:hover {
  color: #007bff;
}
.footer__info p {
  margin: 5px 0;
}
.footer-email {
  color: #007bff;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 5px;
  transition: color 0.3s;
}
.footer-email:hover {
  color: #00c6ff;
}

/* Responsive - Navegação para Mobile */
@media (max-width: 768px) {
  .hamburger {
    display: flex;
  }
  .nav-links {
    display: none;
    flex-direction: column;
    background: rgba(0, 0, 0, 0.8);
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    padding: 10px 0;
  }
  .nav-links.active {
    display: flex;
  }
}
